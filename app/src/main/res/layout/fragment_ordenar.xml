<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".ui.ordenar.OrdenarFragment">


    <!-- tacos -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fr_ordenar_contenedor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sh_contenedores"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fr_ordenar_contenedor2">

        <ImageView
            android:id="@+id/fr_ordenar_img1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/taco"
            android:contentDescription="@string/espacio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fr_ordenar_titulo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/titulos"
            android:text="@string/fr_ordenar_opcion1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fr_ordenar_img1"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- tortas -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fr_ordenar_contenedor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sh_contenedores"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@+id/fr_ordenar_contenedor1">

        <ImageView
            android:id="@+id/fr_ordenar_img2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/torta"
            android:contentDescription="@string/espacio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fr_ordenar_titulo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/titulos"
            android:text="@string/fr_ordenar_opcion2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fr_ordenar_img2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- burritos -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fr_ordenar_contenedor3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sh_contenedores"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@+id/fr_ordenar_contenedor2">

        <ImageView
            android:id="@+id/fr_ordenar_img3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/burrito"
            android:contentDescription="@string/espacio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fr_ordenar_titulo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/titulos"
            android:text="@string/fr_ordenar_opcion3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fr_ordenar_img3"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- bebidas -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fr_ordenar_contenedor4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sh_contenedores"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@+id/fr_ordenar_contenedor3">

        <ImageView
            android:id="@+id/fr_ordenar_img4"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/bebidas"
            android:contentDescription="@string/espacio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fr_ordenar_titulo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/titulos"
            android:text="@string/fr_ordenar_opcion4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fr_ordenar_img4"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>