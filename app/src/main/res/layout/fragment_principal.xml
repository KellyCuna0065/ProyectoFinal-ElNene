<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.principal.PrincipalFragment">

        <ImageView
            android:id="@+id/fr_principal_img1"
            android:layout_width="430dp"
            android:layout_height="325dp"
            android:src="@drawable/principal1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/fr_principal_img2"
            android:layout_width="422dp"
            android:layout_height="214dp"
            android:src="@drawable/principal2"
            app:layout_constraintTop_toBottomOf="@+id/fr_principal_img1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/fr_principal_img3"
            android:layout_width="415dp"
            android:layout_height="325dp"
            android:src="@drawable/principal3"
            app:layout_constraintTop_toBottomOf="@+id/fr_principal_img2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/fr_principal_img4"
            android:layout_width="420dp"
            android:layout_height="215dp"
            android:src="@drawable/principal4"
            app:layout_constraintTop_toBottomOf="@+id/fr_principal_img3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/fr_principal_img5"
            android:layout_width="415dp"
            android:layout_height="325dp"
            android:src="@drawable/principal5"
            app:layout_constraintTop_toBottomOf="@+id/fr_principal_img4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>