<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="botones">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/jost</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="subtitulos">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/jost</item>
        <item name="android:textSize">21sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="texto">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/jost</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="titulos">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/jost_black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="theme_appbar" parent="@style/Theme.ProyectoFinal.AppBarOverlay">
        <item name="android:fontFamily">@font/jost</item>
    </style>

    <style name="theme_navheader" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:fontFamily">@font/jost</item>
    </style>

    <style name="theme_navbar">
        <item name="android:fontFamily">@font/jost</item>
    </style>

</resources>